<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFF7F0"
    android:padding="24dp"
    android:gravity="center">

    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/entradas"
        android:contentDescription="Sin entradas"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/tituloDialogoEntradas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sin entradas"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/mensajeDialogoEntradas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TodavÃ­a no has guardado ninguna entrada."
        android:layout_marginTop="8dp"
        android:textColor="#888888"
        android:textSize="14sp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="4dp" />

    <TextView
        android:id="@+id/botonAceptarEntradas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:textColor="#D32F2F"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="true" />
</LinearLayout>
