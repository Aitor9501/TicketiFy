<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FDF6EC"
    android:padding="24dp"
    android:gravity="center">

    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/imagensinfavoritos"
        android:contentDescription="Sin favoritos"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/dialogTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sin favoritos"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/dialogMensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Todavía no has guardado ningún artista como favorito."
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:textColor="#666666"
        android:textSize="14sp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="4dp" />

    <TextView
        android:id="@+id/dialogBotonAceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:textColor="#D32F2F"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="true" />
</LinearLayout>
