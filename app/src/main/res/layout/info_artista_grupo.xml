<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF6EC">

    <!-- Toolbar personalizada -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/marco_cabecera"
        android:elevation="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <LinearLayout
            android:id="@+id/layout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            >

            <ImageView
                android:id="@+id/logo_toolbar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/logoimagen"
                android:contentDescription="Logo" />

            <TextView
                android:id="@+id/tituloToolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="TicketiFy"
                android:textSize="20sp"
                android:textColor="#910606"
                android:fontFamily="@font/montserrat_bold"
                android:textStyle="bold"
                android:textAllCaps="true" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- Scroll principal -->
    <ScrollView
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:fillViewport="true"
    app:layout_constraintTop_toBottomOf="@id/toolbar"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ðŸŒŒ Parte superior con fondo degradado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fondo_color"
            android:padding="16dp"
            android:orientation="vertical">

            <!-- Tarjeta sobre fondo degradado -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="24dp"
                android:backgroundTint="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageButton
                        android:id="@+id/btnFavorito"
                        android:layout_width="36dp"
                        android:layout_height="37dp"
                        android:layout_gravity="end"
                        android:layout_marginTop="6dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="Marcar como favorito"
                        android:scaleType="fitCenter"
                        android:src="@drawable/microfono" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/imagenEvento"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/fondoconcierto"
                            app:shapeAppearanceOverlay="@style/RoundedCornersImage" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NombreArtista"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:layout_marginTop="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eventos"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        app:cornerRadius="24dp"
                        android:backgroundTint="#D32F2F"
                        android:textColor="@android:color/white"
                        android:onClick="mostrarEventoDetallado" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- â˜ Parte inferior con fondo beige -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FDF6EC"
            android:padding="16dp">

            <!-- BiografÃ­a con doble lÃ­nea -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#910606"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewTituloBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BiografÃ­a"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#910606"
                android:gravity="center" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#910606"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/textViewBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cargando biografÃ­a..."
                android:textColor="#444444"
                android:textSize="15sp"
                android:lineSpacingExtra="6dp"
                android:justificationMode="inter_word" />

            <!-- Preguntas frecuentes -->
            <TextView
                android:id="@+id/textViewFaq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preguntas Frecuentes"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#910606"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp" />

            <!-- Pregunta 1 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/pregunta1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â€¢ Â¿QuÃ© es TicketiFy?"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="#910606"
                    android:padding="12dp"
                    android:onClick="mostrarRespuesta1" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/respuesta1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TicketiFy es una plataforma para descubrir y comprar entradas de eventos musicales en EspaÃ±a."
                android:visibility="gone"
                android:textColor="#444444"
                android:background="#FDF6EC"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Pregunta 2 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/pregunta2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â€¢ Â¿CÃ³mo puedo comprar entradas?"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="#910606"
                    android:padding="12dp"
                    android:onClick="mostrarRespuesta2" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/respuesta2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Puedes comprarlas desde la secciÃ³n Eventos o pulsando el botÃ³n 'Eventos' en esta pantalla."
                android:visibility="gone"
                android:textColor="#444444"
                android:background="#FDF6EC"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
