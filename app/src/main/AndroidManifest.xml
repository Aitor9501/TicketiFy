        tools:targetApi="31" >
        <activity
            android:name=".view.activities.Loggin"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activities.MenuPrincipal" />
        <activity android:name=".view.activities.InfoArtistaFestival"/>
        <activity android:name=".view.activities.EventoDetallado"/>
        <activity android:name=".view.activities.DetalleConcierto"/>
        <activity android:name=".view.activities.Registro"/>
        <activity android:name=".view.activities.WebComprar"/>
        <activity android:name=".view.activities.ItemEventos"/>
        <activity android:name=".view.activities.PerfilEditar" />
        <activity android:name=".view.activities.EventosFavoritos" />
        <activity android:name=".view.activities.EntradaEvento" />
        <activity android:name=".view.activities.MisEntradas" />






        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>